    <script src="~/Assets/Client/js/demo/datatables-demo.js"></script>

    <script src="~/Assets/Client/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/Client/vendor/datatables/dataTables.bootstrap4.min.js"></script>-->
