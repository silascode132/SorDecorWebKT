
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Home</a>
                    <span>Contact</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="contact__content">
                    <div class="contact__address">
                        <h5>Thông tin liên hệ</h5>
                        <ul>
                            <li>
                                <h6><i class="fa fa-map-marker"></i> Địa chỉ</h6>
                                <p>459 Tôn Đức Thắng - Hòa Khánh Nam - Liên Chiểu - Đà Nẵng</p>
                            </li>
                            <li>
                                <h6><i class="fa fa-phone"></i> Điện thoại</h6>
                                <p><span>034.4444.4444</span><span>091.1111.1111</span></p>
                            </li>
                            <li>
                                <h6><i class="fa fa-headphones"></i> Email</h6>
                                <p>dhsp@ued.udn.vn</p>
                            </li>
                        </ul>
                    </div>
                    <div class="contact__form">
                        <h5>Gửi mail</h5>
                        <form action="#">
                            <input required type="text" id="txtName" placeholder="Tên">
                            <input required type="text" id="txtEmail" placeholder="Email">
                            <input required type="text" id="txtPhone" placeholder="Số điện thoại">
                            <textarea required id="txtContent" placeholder="Lời nhắn"></textarea>
                            <input id="btnSend" type="submit" class="site-btn" value="Gửi">
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="contact__map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3834.073937677709!2d108.1569353147022!3d16.061652543907556!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31421924682e8689%3A0x48eb0bdbeec05215!2zVHLGsOG7nW5nIMSQ4bqhaSBI4buNYyBTxrAgUGjhuqFtIC0gxJBIxJBO!5e0!3m2!1svi!2s!4v1639757573008!5m2!1svi!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->
